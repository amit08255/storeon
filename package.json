{
  "name": "storeon",
  "version": "3.1.4",
  "description": "Tiny (180 bytes) event-based Redux-like state manager for React and Preact",
  "keywords": [
    "state",
    "immutable",
    "react",
    "preact",
    "hook"
  ],
  "scripts": {
    "clean": "rimraf api.md coverage/ test/demo/.cache test/demo/dist",
    "test": "jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md",
    "start": "parcel serve --cache-dir test/demo/.cache -d test/demo/dist test/demo/index.html --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "storeon/storeon",
  "sideEffects": false,
  "types": "./index.d.ts",
  "peerDependencies": {
    "preact": ">=10.0.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.2.0",
    "@logux/sharec-config": "^0.9.0",
    "@size-limit/dual-publish": "^4.10.1",
    "@size-limit/preset-small-lib": "^4.10.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "check-dts": "^0.4.4",
    "dual-publish": "^1.0.4",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^28.0.2",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nanodelay": "^1.0.7",
    "parcel-bundler": "^1.12.4",
    "preact": "^10.5.12",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.0.2",
    "size-limit": "^4.10.1",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3",
    "yaspeller": "^7.0.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "size-limit": [
    {
      "name": "core",
      "import": {
        "index.js": "{ createStoreon }"
      },
      "limit": "180 B"
    },
    {
      "name": "core + react hook",
      "import": {
        "index.js": "{ createStoreon }",
        "react/index.js": "{ useStoreon }"
      },
      "limit": "352 B",
      "ignore": [
        "react"
      ]
    },
    {
      "name": "core + react decorator",
      "import": {
        "index.js": "{ createStoreon }",
        "react/index.js": "{ connectStoreon }"
      },
      "limit": "399 B",
      "ignore": [
        "react"
      ]
    },
    {
      "name": "devtools",
      "import": {
        "devtools/index.js": "{ storeonDevtools, storeonLogger }"
      },
      "limit": "517 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-unused-expressions": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "node/no-unpublished-require": "off",
      "import/export": "off",
      "no-redeclare": "off",
      "no-console": "off",
      "func-style": "off"
    }
  },
  "eslintIgnore": [
    "test/demo/dist",
    "**/*.errors.ts",
    "**/errors.ts"
  ],
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "createStore",
      "moduleInitializer",
      "Preact",
      "Redux",
      "gzipped",
      "Storeon A",
      "Reduxâ€™s",
      "async",
      "StoreContext",
      "Storeon",
      "DevTools",
      "useStoreon",
      "polyfill",
      "UIBook",
      "UI",
      "WebSocket",
      "supports ES",
      "bundlers",
      "CDN",
      "ES",
      "ES2016",
      "pnpm",
      "Vue",
      "js"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.9.0"
  }
}
